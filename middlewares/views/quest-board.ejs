<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quest Board</title>
    <%- include('partials/head-tags') %>
    <link rel="stylesheet" href="/quest-board.css" />
  </head>
  <body class="bg-light">
    <%- include('partials/header') %> <%- include('partials/not-signed-in') %>
    <main>
      <h1>Accepted Quests</h1>
      <a href="/chat">View accepted quests</a>
      <h1>New Quests</h1>
      <div id="questGrid" class="row g-3">
        <% quests.forEach(function(quest) { %>
        <div
          class="col-12 col-sm-6 col-md-4 col-lg-3"
          data-id="<%= quest._id %>"
        >
          <div class="card note-card">
            <div class="card-body p-3">
              <p class="card-text note-message mb-3"><%= quest.title %></p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">#<%= quest.username %></small>
                <div>
                  <button class="btn btn-sm btn-success accept-btn me-1">
                    <i class="fa-solid fa-check"></i> ACCEPT
                  </button>
                  <button class="btn btn-sm btn-outline-danger delete-btn">
                    <i class="fa-regular fa-trash-can"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
