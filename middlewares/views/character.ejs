<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quest Board</title>
    <%- include('partials/head-tags') %> 
  </head>
  <body>
    <%- include('partials/header') %>
    <main id="character-page">
      <h1 id="character-title">Your Character</h1>

      <!-- Profile Card -->
      <section id="profile-card" class="character-profile">
        <img
          src="images/avatar.png"
          alt="Character Avatar"
          id="avatar"
          class="avatar"
        />
        <h2 id="player-name">Player Name</h2>
        <p>Level: <span id="player-level">5</span></p>
        <p>Points: <span id="player-points">120</span></p>
        <p>Status: <span id="player-status">üõ°Ô∏è Knight Helper</span></p>
      </section>

      <!-- Customization Options -->
      <section id="customization" class="character-customization">
        <h2>Customize Your Character</h2>

        <!-- Name Change -->
        <div id="name-change" class="custom-option">
          <label for="name-input">Update Name:</label>
          <input type="text" id="name-input" placeholder="Enter new name" />
          <button id="save-name-btn">Save Name</button>
        </div>

        <!-- Gender Selection -->
        <div id="gender-selection" class="custom-option">
          <h3>Choose Gender</h3>
          <button class="gender-btn" id="male-btn">Male</button>
          <button class="gender-btn" id="female-btn">Female</button>
        </div>

        <!-- Class Selection -->
        <div id="class-selection" class="custom-option">
          <h3>Choose Class</h3>
          <button class="class-btn" id="wizard-btn">Wizard</button>
          <button class="class-btn" id="knight-btn">Knight</button>
          <button class="class-btn" id="ranger-btn">Ranger</button>
        </div>

        <!-- Outfit / Armor -->
        <div id="armor-selection" class="custom-option">
          <h3>Outfits & Armor</h3>
          <button class="armor-btn" id="basic-armor-btn">Basic Armor</button>
          <button class="armor-btn" id="elite-armor-btn">Elite Armor</button>
          <button class="armor-btn" id="legendary-robes-btn">
            Legendary Robes
          </button>
        </div>

        <!-- Weapons / Shields -->
        <div id="weapon-selection" class="custom-option">
          <h3>Weapons & Shields</h3>
          <button class="weapon-btn" id="sword-btn">Sword</button>
          <button class="weapon-btn" id="bow-btn">Bow</button>
          <button class="weapon-btn" id="shield-btn">Shield</button>
        </div>
      </section>

      <!-- Progress / Achievements -->
      <section id="progress" class="character-progress">
        <h2>Progress</h2>
        <ul id="progress-list">
          <li>Earned 20 points for helping on Quest #12</li>
          <li>Rated 5 stars by Quest Seeker</li>
          <li>Unlocked privilege: Access to Elite Board</li>
        </ul>
      </section>

      <!-- Visual Status Bar -->
      <section id="status-bar" class="status-bar">
        <h2>Experience</h2>
        <div class="progress-container">
          <div id="xp-bar" class="progress-bar" style="width: 60%">60%</div>
        </div>
      </section>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
