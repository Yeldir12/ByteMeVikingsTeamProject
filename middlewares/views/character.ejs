<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quest Board</title>
    <%- include('partials/head-tags') %>
  </head>
  <body>
    <%- include('partials/header') %> <%- include('partials/not-signed-in') %>
    <main id="character-page" class="container py-4">
      <h1 id="character-title" class="text-center mb-5">Your Character</h1>

      <!-- Profile Card -->
      <section id="profile-card" class="card text-center mb-5 shadow-sm">
        <div class="card-body">
          <img
            src="/images/Ranger_thumbnail01.png"
            alt="Character Avatar"
            id="avatar"
            class="rounded-circle mb-3"
            style="height: 120px"
          />
          <h2 id="player-name" class="card-title">Player Name</h2>
          <p class="mb-1">
            Level: <span id="player-level" class="badge bg-primary">5</span>
          </p>
          <p class="mb-1">
            Points: <span id="player-points" class="badge bg-success">120</span>
          </p>
          <p>
            Status:
            <span id="player-status" class="badge bg-warning text-dark"
              >üõ°Ô∏è Knight Helper</span
            >
          </p>
        </div>
      </section>

      <!-- Customization Options -->
      <section id="customization" class="mb-5">
        <h2 class="mb-3">Customize Your Character</h2>

        <!-- Name Change -->
        <div id="name-change" class="mb-4">
          <label for="name-input" class="form-label">Update Name:</label>
          <div class="input-group">
            <input
              type="text"
              id="name-input"
              class="form-control"
              placeholder="Enter new name"
            />
            <button id="save-name-btn" class="btn btn-primary">
              Save Name
            </button>
          </div>
        </div>

        <!-- Gender Selection -->
        <div id="gender-selection" class="mb-4">
          <h3 class="mb-2">Choose Gender</h3>
          <div class="btn-group">
            <button class="btn btn-outline-primary gender-btn" id="male-btn">
              Male
            </button>
            <button class="btn btn-outline-danger gender-btn" id="female-btn">
              Female
            </button>
          </div>
        </div>

        <!-- Class Selection -->
        <div id="class-selection" class="mb-4">
          <h3 class="mb-2">Choose Class</h3>
          <div class="btn-group">
            <button class="btn btn-outline-secondary class-btn" id="wizard-btn">
              Wizard
            </button>
            <button class="btn btn-outline-secondary class-btn" id="knight-btn">
              Knight
            </button>
            <button class="btn btn-outline-secondary class-btn" id="ranger-btn">
              Ranger
            </button>
          </div>
        </div>

        <!-- Outfit / Armor -->
        <div id="armor-selection" class="mb-4">
          <h3 class="mb-2">Outfits & Armor</h3>
          <div class="btn-group flex-wrap">
            <button
              class="btn btn-outline-dark m-1 armor-btn"
              id="basic-armor-btn"
            >
              Basic Armor
            </button>
            <button
              class="btn btn-outline-dark m-1 armor-btn"
              id="elite-armor-btn"
            >
              Elite Armor
            </button>
            <button
              class="btn btn-outline-dark m-1 armor-btn"
              id="legendary-robes-btn"
            >
              Legendary Robes
            </button>
          </div>
        </div>

        <!-- Weapons / Shields -->
        <div id="weapon-selection" class="mb-4">
          <h3 class="mb-2">Weapons & Shields</h3>
          <div class="btn-group flex-wrap">
            <button
              class="btn btn-outline-success m-1 weapon-btn"
              id="sword-btn"
            >
              Sword
            </button>
            <button class="btn btn-outline-success m-1 weapon-btn" id="bow-btn">
              Bow
            </button>
            <button
              class="btn btn-outline-success m-1 weapon-btn"
              id="shield-btn"
            >
              Shield
            </button>
          </div>
        </div>
      </section>

      <!-- Progress / Achievements -->
      <section id="progress" class="mb-5">
        <h2 class="mb-3">Progress & Achievements</h2>
        <ul class="list-group">
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            Earned 20 points for helping on Quest #12
            <span class="badge bg-primary rounded-pill">+20</span>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            Rated 5 stars by Quest Seeker
            <span class="badge bg-warning text-dark rounded-pill"
              >‚≠êÔ∏è‚≠êÔ∏è‚≠êÔ∏è‚≠êÔ∏è‚≠êÔ∏è</span
            >
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            Unlocked privilege: Access to Elite Board
            <span class="badge bg-success rounded-pill">NEW</span>
          </li>
        </ul>
      </section>

      <!-- Visual Status Bar -->
      <section id="status-bar" class="mb-5">
        <h2 class="mb-2">Experience</h2>
        <div class="progress" style="height: 25px">
          <div
            id="xp-bar"
            class="progress-bar progress-bar-striped progress-bar-animated bg-info"
            role="progressbar"
            style="width: 60%"
            aria-valuenow="60"
            aria-valuemin="0"
            aria-valuemax="100"
          >
            60%
          </div>
        </div>
      </section>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
